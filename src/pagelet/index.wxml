<van-popup round
  closeable close-icon="close" close-icon-position="top-left"
  lock-scroll="{{true}}"
  root-porta="{{true}}"
  show="{{isShow}}"
  position="bottom"
  custom-style="height: 90%"
  bind:close="onClose"
>
  <button open-type="share" plain="{{true}}" class="dov-pagelet__share">
    <van-icon name="share-o" size="20px" bind:click="onShare" />
  </button>
  <swiper wx:if="{{images&&images.length>0}}" indicator-dots="{{true}}" indicator-type="worm" transformer-type="scaleAndFade" easing-function="" bindchange="" style="height:420px;">
    <block wx:for="{{images}}" wx:key="*this">
      <swiper-item>
        <view class="swiper-item">
          <image style="width:100%;height:420px;" src="{{item.url || item}}" mode="aspectFill" lazy-load="{{true}}" show-menu-by-longpress="true" bindtap="onClickImage" />
          <view wx:if="{{item.title}}" class="dov-swiper-item__title">{{item.title || ''}}</view>
        </view>
      </swiper-item>
    </block>
  </swiper>
  <van-row>
    <van-col span="20"><view wx:if="{{title}}" class="dov-pagelet__title">{{title}}</view></van-col>
    <van-col span="4">
      <!--button open-type="share" plain="{{true}}" style="border:none">
        <van-icon name="share-o" size="20px" bind:click="onShare" />
      </button-->
    </van-col>
  </van-row>
  <view wx:if="{{texts}}" class="dov-pagelet__content">
    <block wx:for="{{texts}}" wx:key="*this">
      <view class="dov-pagelet__section">{{item}}</view>
    </block>
  </view>
</van-popup>

